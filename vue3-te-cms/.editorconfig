# http://editorconfig.org

# 指定文件
[*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,vue,css,scss,sass,less,styl}]
# 设置文件字符集为 utf-8
charset = utf-8
# 缩进大小
indent_size = 2
# 缩进风格(tab | space)
indent_style = space
# 去除行尾的任意空白字符
insert_final_newline = true
# 始终在文件末尾插入一个新行
trim_trailing_whitespace = true

end_of_line = lf
max_line_length = 100

# 表示仅 md 文件适用以下规则
[*.md]
max_line_length = off
